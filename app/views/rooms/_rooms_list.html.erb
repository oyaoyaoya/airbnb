<% rooms.each do |room| %>
    <div class="col-md-4" style="min-height:300px">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <% if room.photos.count > 0 %>
            <%= image_tag room.photos[0].image.thumb.url %>
          <% else %>
            <p>no images</p>
          <% end %>
        </div>
        <div class="panel-body">
          <%= link_to room.listing_name, room %><br/>
          $<%= room.price %> - <%= room.home_type %> - <%= pluralize(room.bed_room, "bed") %>
          <div class="pull-left", id="star_<%= room.id %>"></div> <div class="pull-left">
          &nbsp;<%= room.guest_reviews.count %></div>
        </div>
      </div>
    </div>

    <script>
      $('#star_<%= room.id %>').raty({
        path: '/assets',
        readOnly: true,
        score: <%= room.average_rating %>
      });
    </script>
<% end %>
