<div class="container">
  <div class="row">
  <%= render 'user_menu' %>

  <div class="col-md-9">
    <%= render 'navbar' %>
    <% if @guest_reviews.present? || @host_reviews.present? %>
      <div class="panel panel-default">
        <div class="panel-heading">
          Host Reviews
        </div>
        <div class="panel-body">
          <% @host_reviews.order(id: :desc).each do |r| %>
            <hr/>
            <div class="row">
              <div class="col-md-3 text-center">
                <%= image_tag avatar_url(r.host), class: "img-circle avatar-medium" %><br/><br/>
                <strong><%= r.host.fullname %></strong>
              </div>
              <div class="col-md-9">
                <div id="star_<%= r.id %>"></div>

                <% if current_user && current_user == r.host %>
                    <span class="pull-right">
                      <%= link_to r, method: :delete, data: {confirm: "Are you sure?"} do %>
                          <i class="fa fa-trash-o fa-lg"></i>
                      <% end %>
                    </span>
                <% end %>
                <div><%= r.created_at.strftime("%v") %></div>
                <div><%= r.comment %></div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="panel-heading">
          Guest Reviews
        </div>
        <div class="panel-body">
          <% @guest_reviews.order(id: :desc).each do |r| %>
            <hr/>
            <div class="row">
              <div class="col-md-3 text-center">
                <%= image_tag avatar_url(r.guest), class: "img-circle avatar-medium" %><br/><br/>
                <strong><%= r.guest.fullname %></strong>
              </div>
              <div class="col-md-9">
                <div id="star_<%= r.id %>"></div>

                <% if current_user && current_user == r.guest %>
                    <span class="pull-right">
                      <%= link_to r, method: :delete, data: {confirm: "Are you sure?"} do %>
                          <i class="fa fa-trash-o fa-lg"></i>
                      <% end %>
                    </span>
                <% end %>
                <div><%= r.created_at.strftime("%v") %></div>
                <div><%= r.comment %></div>
              </div>
            </div>
          <% end %>
        </div>

        </div>
        </div>
    <% end %>
  
  </div>
  </div>
</div>
