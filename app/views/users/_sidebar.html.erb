  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="image-responsive" id="profile-photo-large">
          <% if current_user.image.present? %>
            <%= image_tag current_user.image_url, class: "avatar-full" %>
          <% else %>
            <i class="fa fa-camera fa-lg"></i>&nbsp;&nbsp;no image
          <% end %>
        </div>
      </div>
      <div class="panel-body">
        <ul class="sidebar-list">
          <li><h4><%= current_user.fullname %></h4></li>
          <li><%= link_to "Profile (TBD)", edit_user_registration_path %></li>
          <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
        </ul>
      </div>
    </div>
    <% if current_page?(dashboard_path) %>
      <div class="panel panel-default">
        <div class="panel-heading">Quick Links</div>
        <div class="panel-body">
          <ul class="sidebar-list">
            <li><%= link_to "Upcoming Trips", your_trips_path %></li>
            <li><%= link_to "Hosting on Airbnb", root_path %></li>
            <li><%= link_to "Traveling on Airbnb", root_path %></li>
            <li><%= link_to "Help center", root_path %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
